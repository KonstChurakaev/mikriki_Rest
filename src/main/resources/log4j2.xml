<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout
                    pattern="%clr{%8.8r}{} msec: %clr{%d{dd-MM-yyy HH:mm:ss.SSS}}{faint}
%clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint}
ПОТОК:[%clr{%15.15t}{faint}] %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%xwEx"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
